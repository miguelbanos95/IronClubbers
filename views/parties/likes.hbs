<div class="container mt-4 absolute">
    {{#if likes}}
    <h1> Tus Favoritos: </h1>
    <div class="row mx-auto">


        {{#each likes as |like|}}

        <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
            <a id="link-cards" href="/parties/{{party.id}}" style="text-decoration: none">
                <div id="cards-style" class="card w-100 bg-secondary" style="width: 18rem">
                    <div class="position-relative">
                        <img src="{{party.image}}" class="card-img-top" style="height:220px;" alt="...">
                        <div class="like-button">
                            {{#if ../currentUser}}
                            <button class="like-button border-0 bg-secondary">
                                <i data-id="{{party.id}}"
                                    class=" like-action fa-solid fa-heart fa-xl
                                    {{#userLikedParty likes=party.likes currentUserId=../currentUser.id}} icon-liked {{/userLikedParty}}"></i>
                            </button>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column mt-2">
                        <h5 id="card-name" class="card-title">{{party.name}}</h5>
                        <div class="d-flex bd-highlight justify-content-between align-items-stretch">
                            <h5 id="card-place" class="card-text text-center">üìç {{party.place}}</h5>
                            <h4><big class="card-text text-center text-big mb-1">{{party.price}}‚Ç¨</big></h4>
                        </div>

                        <div class="d-flex justify-content-between">

                            <a href="/parties/{{party.id}}" class="btn "></a>

                            <a href="/parties/{{party.id}}" class="btn "></a>

                        </div>
                    </div>

                </div>
        </div>
        </a>
        {{/each}}
        {{else}}

        <h1>Lo sentimos a√∫n no tiene seleccionado eventos favoritos</h1>

        {{/if}}

    </div>




</div>

