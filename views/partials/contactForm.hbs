<div class="row justify-content-center my-5">
    <div class="col col-sm-8 col-md-8 col-lg-8">
        <form action="/contact" method="POST">
            <div class="form-group mb-3">
                <label for="formGroupExampleInput2">Nombre completo</label>
                <div class="input-group mb-3">
                    <input name="name" type="name" class="form-control {{#if errors.name}}is-invalid{{/if}}"
                        placeholder="ej. Juan GarcÃ­a" required>
                    {{#if errors.name}}
                    <div class="invalid-feedback">{{errors.name}}</div>
                    {{/if}}
                </div>
            </div>
            <div class=" form-group mb-3">
                <label for="formGroupExampleInput2">Email</label>
                <div class="input-group mb-3">
                    <input value="{{user.email}}" name="email" type="email"
                        class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="example@example.com"
                        required>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="text" class="form-label">Asunto</label>
                <textarea class="form-control" name="issue" id="text" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar solicitud</button>
        </form>
    </div>
</div>