
<div class="container mt-4 absolute">
    <h1>Eventos</h1>
    <div class="row mx-auto">

        {{#each parties as |party|}}

        <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
            <div id="cards-style" class="card w-100 bg-secondary" style="width: 18rem">
                <div class="position-relative">
                    <img src="{{party.image}}" class="card-img-top" style="height:220px;" alt="...">
                    <div class="like-button">
                        {{#if ../currentUser}}
                        <button class="like-button border-0 bg-secondary">
                            <i data-id="{{party.id}}"
                                class=" like-action fa-solid fa-heart fa-xl
                                    {{#userLikedParty likes=party.likes party=party}} icon-liked {{/userLikedParty}}"></i>
                        </button>
                        {{/if}}
                    </div>
                </div>
                <div class="card-body d-flex flex-column mt-2">
                    <h5 class="card-title">{{party.name}}</h5>
                    <small class="card-text text-small mb-1">📍 {{party.place}}</small>
                    {{!-- <small class="card-text text-small mb-1">🎵 Tipo de música:
                        {{party.musicTypes}}</small>--}}
                    <small class="card-text text-small mb-1">📅 {{#dateHelper date =
                        party.date}}{{/dateHelper}}</small>
                    <small class="card-text text-small mb-1">💸 {{party.price}}€</small>
                    <div class="d-flex justify-content-between">
                        <a href="/parties/{{party.id}}" class="btn btn-primary">Más detalles</a>
                        {{#if ../currentUser}}
                        <a href="/parties/{{party.id}}/edit" class="btn btn-success">Editar</a>
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>
        {{/each}}

    </div>
</div>
